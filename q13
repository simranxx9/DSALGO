class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int rows = matrix.size();
        int cols = matrix[0].size();
        for(int i=0;i<rows;i++)
        {
            if(binary_search(matrix[i].begin(),matrix[i].end(),target))
            {
                return true;
            }
            else{
                continue;
            }
        }
        return false;
    }
};
